{{#each sections}}


    {{#is this.type 'quote'}}
      <section>
        <header>
          <h2>Quote {{#if author}}by {{author}}{{/if}}</h2>
        </header>
        <blockquote>
          {{{text}}}
          <footer>
            {{#if url}}
              <cite title="{{author}}"><a href="{{url}}">{{author}}</a></cite>
            {{/if}}
            {{#unless url}}
              <cite title="{{author}}">{{author}}</cite>
            {{/unless}}
          </footer>
        </blockquote>
      </section>
    {{/is}}

    {{#is this.type 'youtube'}}
      <section>
        <header>
          <h2>{{title}}</h2>
        </header>
        <figure>
          <a href="https://www.youtube.com/watch?v={{id}}" class="no-tufte-underline" title="{{title}}">
            <img src="images/yid-{{id}}.jpg" alt="{{title}}" style="width: 100%; height: auto;">
          </a>
          <figcaption>{{title}}</figcaption>
        </figure>
        <p><a href="https://www.youtube.com/watch?v={{id}}" title="{{title}}">Play Video</a></p>
      </section>
    {{/is}}

    {{#is this.type 'text'}}
      <section>
        <header>
          <h2>{{title}}</h2>
        </header>
        {{{text}}}
      </section>
    {{/is}}

    {{#is this.type 'poem'}}
      <section>
        <header>
          <h2>{{title}}</h2>
          <h3>{{author}}</h3>
        </header>
        {{{text}}}
      </section>
    {{/is}}


    {{#is this.type 'image'}}
    <section>
      <header>
        <h2>{{title}}</h2>
      </header>
        <figure>
          <img src="images/{{url}}" alt="{{title}}" style="width: 100%; height: auto;">
        </figure>
        {{{text}}}
    </section>
    {{/is}}

    {{#is this.type 'subtitle'}}
      <section>
        <header>
          <h2>{{title}}</h2>
        </header>
      </section>
    {{/is}}

    {{#is this.type 'link'}}
      <section>
        <header>
          <h2>{{title}}</h2>
        </header>
        <p>
          <a href="{{url}}">{{title}} &raquo;</a>
        </p>
      </section>
    {{/is}}

    {{#is this.type 'business'}}
      <section>
        <header>
          <h2>Business Practice: {{title}}</h2>
        </header>
        <figure>
          <img src="images/{{url}}" alt="{{title}}" style="width: 100%; height: auto;">
        </figure>
        {{{text}}}
      </section>
    {{/is}}

{{/each}}
